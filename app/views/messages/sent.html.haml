=render 'account/nav'

=link_to "New Message", new_message_path(return: here), class:'btn btn-mini btn-success pull-right'
%ul.nav.nav-tabs
  %li=link_to "Received Messages", messages_path
  %li.active=link_to "Sent Messages", sent_messages_path
  
%table.table
  %tr
    %th To
    %th On
    %th Message
  -@messages.each do |message|
    %tr
      %td=user_link message.to
      %td=dt message.created_at
      %td=rich message.message