<%
# This is in a seperate file so site css changes won't wipe the icons from the user's cache.

def asset_data_uri(path)
  require 'base64'
  if File.exists? path
    Base64.encode64(File.open(path, "rb") { |f| f.read }) 
  else
    Base64.encode64(File.open(File.join(Rails.root, "app/assets/images", "icons/na.png"), "rb") { |f| f.read }) 
  end.gsub("\n", "")
end
%>

<% IconHelper::ICONS.each do |symbol, file| %>
.sicon-<%=file %>{
  background-image: url("data:image/png;base64,<%= asset_data_uri File.join(Rails.root, "app/assets/images", "icons/#{file}.png") %>");
}

<% end %>

.sicon{
  display: inline-block;
  width: 16px;
  height: 16px;
  line-height: 14px;
  vertical-align: text-top;background-repeat: no-repeat;
  margin-top: 1px;
}

