-# required: comment or @comment
-comment ||= @comment

=simple_form_for comment, html:{class:'form-horizontal', data:{comment_id:comment.id}}  do |f|
  -if comment.new_record?
    =f.hidden_field :commentable_type
    =f.hidden_field :commentable_id
  =f.input :contents, input_html:{class: 'redactor', rows: 8}
  .form-actions
    =f.submit class: 'btn btn-primary'
    -unless comment.new_record?
      =link_to "Cancel", '#', class: 'btn', data:{widget: "cancel-edit-comment", comment_id: comment.id}