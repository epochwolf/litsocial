-# required: story
-if series = story.series
  .row-fluid{style: "text-align: center;"}
    .span4
      -if prev_story = story.prev
        %strong Prev
        =sicon_link :story, prev_story.title, prev_story
      -else
        &nbsp;
    .span4
      %strong #{"##{story.series_position}"} of
      =sicon_link :series, series.title, series
    .span4
      -if next_story = story.next
        %strong Next
        =sicon_link :story, next_story.title, next_story
      -else
        &nbsp;